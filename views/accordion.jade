block accordion
   script.
      $(function () {
         $("#accordion").accordion({
            autoHeight: false,
            navigation: true
         });
      });
   #accordion
      h3
         a(href='#') Applications Filter
      div
         ul#appsFilter
      h3
         a(href='#') Locations Filter
      div
         ul#locationFilter
      h3
         a(href='#') Time Filter
      div
         label
            input.filter.time(type='checkbox')
            | &nbsp; Print unauthorized times
      h3
         a(href='#') Unauthorized applications
      div
         include accordion_content/apps
      h3
         a(href='#') Authorized times
      div
         include accordion_content/times
      h3
         a(href='#') Authorized locations
      div
         include accordion_content/location

